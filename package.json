{
  "name": "graphql-pagination-transform",
  "version": "1.2.0",
  "description": "Transform fields into relay connections using a @connection directive",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "format": "npx prettier --write 'src/**/*.{ts,tsx,js,jsx}'",
    "lint": "npx tslint --fix 'src/**/*.{ts,tsx}'",
    "test": "npx jest",
    "prepare": "npm run build",
    "version": "git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/Yunoo/graphql-pagination-transform.git"
  },
  "license": "MIT",
  "engines": {
    "node": "^14.17.0 || >= 16.13.0"
  },
  "peerDependencies": {
    "@graphql-tools/merge": "^8.2.0",
    "@graphql-tools/schema": "^8.4.0 || ^9.0.0",
    "@graphql-tools/utils": "^8.8.0 || ^9.0.0",
    "graphql": "^16.0.0"
  },
  "devDependencies": {
    "@graphql-tools/load-files": "6.6.1",
    "@types/node": "18.11.9",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "tslint": "5.20.1",
    "tslint-config-prettier": "1.18.0",
    "typescript": "4.8.4"
  },
  "keywords": [
    "graphql",
    "sdl",
    "graphql-schema-language",
    "graphql-schema",
    "schema",
    "directive",
    "relay",
    "connection"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "bugs": {
    "url": "https://github.com/Yunoo/graphql-pagination-transform/issues"
  },
  "homepage": "https://github.com/Yunoo/graphql-pagination-transform#readme",
  "directories": {
    "lib": "lib"
  },
  "author": "Anatoli Fridlund Belski <Yunoo@users.noreply.github.com>"
}
